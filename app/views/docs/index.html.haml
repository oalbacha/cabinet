.wrapper_with_padding
	#docs.clearfix
		- unless @docs.blank?
			- @docs.each do |doc|
				%a{ href: (url_for [doc])}
					.doc
						%p.title= link_to doc.title, doc
						%p.date= time_ago_in_words(doc.created_at)
						%p.content= truncate(doc.content, length:100)
		- else 
			%h2 Create a Document!
			%p Start Creating Documents Today!
			%button= link_to "Create a Document", new_doc_path